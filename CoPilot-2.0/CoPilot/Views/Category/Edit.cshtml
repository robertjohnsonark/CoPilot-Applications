@model CoPilot.Models.Category
@{
    ViewBag.Title = "Edit Category";
}
<div class="container">
    <div class="panel-group first-panel">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="catEdit">
                <h4 class="panel-title">@ViewBag.Title</h4>
            </div>
            <div class="panel-body background75">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.ActionLink(linkText: "Back to List", actionName: "Index", controllerName: "Category", routeValues: new { }, htmlAttributes: new { @class = "btn-xs btn-cp" })
                            <button type="submit" class="btn-xs btn-cp">Save</button>
                        </div>
                    </div>
                    <div class="text-danger col-md-12">@Html.ValidationSummary(true)</div>

                    @Html.HiddenFor(model => model.CategoryId)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Description, new {@class = "form-control"})
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Status, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Status, Model.Status.ToSelectList(), new {@class = "form-control"})
                            <div class="text-danger">
                                @Html.ValidationMessageFor(model => model.Status)
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


