@model IEnumerable<CoPilot.Models.Category>
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="panel-group first-panel">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="catList">
                <h4 class="panel-title">Index</h4>
            </div>
            <div class="panel-body background75">
                <div id="update-message">
                    @ViewBag.StatusMessage
                </div>
                <p>
                    @Html.ActionLink(linkText: "Operations", actionName: "Edit", controllerName: "AppSettings", routeValues: new {}, htmlAttributes: new {@class = "btn-xs btn-cp"})
                    @Html.ActionLink(linkText: "Create New", actionName: "Create", controllerName: "Category", routeValues: new { }, htmlAttributes: new { @class = "btn-xs btn-cp" })
                </p>
                <div class="form-group">
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>
                                <input id="ShowHiddenObjects" type="checkbox" data-function="ShowHiddenObjects" data-url="/Category/Index" value="">
                                <span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>
                                Show hidden categories, you cannot delete data in the market
                            </label>
                        </div>
                    </div>
                </div>
                <table class="table table-bordered table-responsive table-hover table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.ActionLink(linkText: "Edit", actionName: "Edit", controllerName: "Category", routeValues: new { id = item.CategoryId }, htmlAttributes: new { @class = "btn-xs btn-cp" })
                                @Html.ActionLink(linkText: "Details", actionName: "Details", controllerName: "Category", routeValues: new { id = item.CategoryId }, htmlAttributes: new { @class = "btn-xs btn-cp" })
                                @Html.ActionLink(linkText: "Hide", actionName: "Delete", controllerName: "Category", routeValues: new { id = item.CategoryId }, htmlAttributes: new { @class = "btn-xs btn-cp" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>