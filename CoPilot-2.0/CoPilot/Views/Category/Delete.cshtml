@model CoPilot.Models.Category
@{
    ViewBag.Title = "Delete Category";
}
<div class="container">
    <div class="panel-group first-panel">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="catDelete">
                <h4 class="panel-title">@ViewBag.Title</h4>
            </div>
            <div class="panel-body background75">
                <h3>Are you sure you want to delete this?</h3>
                <p>
                    @Html.ActionLink(linkText: "Back to List", actionName: "Index", controllerName: "Category", routeValues: new { }, htmlAttributes: new { @class = "btn-xs btn-cp" })
                    <button type="submit" class="btn-xs btn-cp">Delete</button>
                </p>
               @using (Html.BeginForm())
                {

                    @Html.LabelFor(model => model.Name)
                    @Html.DisplayFor(model => model.Name)<br/>
                    @Html.LabelFor(model => model.Description)
                    @Html.DisplayFor(model => model.Description)<br/>
                    @Html.LabelFor(model => model.Status)
                    @Html.DisplayFor(model => model.Status)<br/>
                }
            </div>
        </div>
    </div>
</div>
