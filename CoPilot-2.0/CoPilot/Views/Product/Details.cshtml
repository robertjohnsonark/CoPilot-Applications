@model CoPilot.ViewModels.ProductPhotosViewModel
@{
    ViewBag.Title = "Product Details";
    ViewBag.Message = "Wren Thicket Market";
}
<div class="container">
    <div class="panel-group first-panel">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="productDetails">
                <h4 class="panel-title">@ViewBag.Title</h4>
            </div>
            <div class="panel-body background75">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <p>
                        @Html.ActionLink(linkText: "Back to List", actionName: "Index", controllerName: "Product", routeValues: new { }, htmlAttributes: new { @class = "btn-xs btn-cp" })
                    </p>
                    @Html.LabelFor(model => model.Product.Category.Name)
                    @Html.DisplayFor(model => model.Product.Category.Name)<br />
                    @Html.LabelFor(model => model.Product.Partner.Name)
                    @Html.DisplayFor(model => model.Product.Partner.Name)<br />
                    @Html.LabelFor(model => model.Product.Title)
                    @Html.DisplayFor(model => model.Product.Title)<br />
                    @Html.LabelFor(model => model.Product.Units)
                    @Html.DisplayFor(model => model.Product.Units)<br />
                    @Html.LabelFor(model => model.Product.Price)
                    @Html.DisplayFor(model => model.Product.Price)<br />
                    @Html.LabelFor(model => model.Product.Description)
                    @Html.DisplayFor(model => model.Product.Description)<br />
                    @Html.LabelFor(model => model.Product.Notes)
                    @Html.DisplayFor(model => model.Product.Notes)<br />
                    @Html.LabelFor(model => model.Product.Status)
                    @Html.DisplayFor(model => model.Product.Status)<br />
                </div>
                @if (Model.Photos.Count > 0)
                {
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                        @Html.Partial("PhotoView", Model.Photos)
                    </div>
                }
            </div>
        </div>
    </div>
</div>
    @section Scripts {
        $("div.item:eq(0)").addClass('active');

    }

