@model System.Collections.Generic.IEnumerable<CoPilot.Models.DisplayPhotoModel>
<div id="productCarousel" class="carousel slide" data-ride="carousel">
    @*<ol class="carousel-indicators">
        <li data-target="#productCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#productCarousel" data-slide-to="1"></li>
        <li data-target="#productCarousel" data-slide-to="2"></li>
        <li data-target="#productCarousel" data-slide-to="3"></li>
    </ol>*@
    <div class="carousel-inner" role="listbox">
        @{ int i = 0; }            
        @foreach (var item in Model)
        {
            <div data-target="#productCarousel" data-slide-to="@(i)" class="@((i == 0) ? "item active" : "item")">
            <img class="center-block" src="@item.Uri" alt="" />
            @*<div class="carousel-image" style="background-image: @item.Uri"></div>*@
            @if (@item.LongDescription != null)
            {
                <div class="carousel-caption">
                    <p>@item.LongDescription</p>
                </div>
            }
            </div>
            i++;
        }

</div>
@if (Model.Count() > 1) 
{ 
    <a class="left carousel-control" href="#productCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#productCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
}
</div>

@section Scripts {

}