@model IEnumerable<CoPilot.Models.Order>
@{
    ViewBag.Title = "Orders";
    ViewBag.Message = "Wren Thicket Market";
}
<div class="container">
    <div class="panel-group first-panel">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="accountOrders">
                <h4 class="panel-title">Account Orders</h4>
            </div>
            <div class="panel-body background75">
                <div id="update-message">
                </div>
                <p>
                    @Html.ActionLink(linkText: "Market", actionName: "Index", controllerName: "Home", routeValues: new { }, htmlAttributes: new { @class = "btn-xs btn-cp" })<br />
                </p>
                <table class="table table-bordered table-responsive table-hover table-striped">
                    <tr>
                        <th>
                            First Name
                        </th>
                        <th>
                            Last Name
                        </th>
                        <th>
                            Order Date
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                <span>@Html.ActionLink(linkText: "Details", actionName: "Details", controllerName: "Order", routeValues: new {id = item.OrderId}, htmlAttributes: new {@class = "btn-xs btn-cp"})</span>
                                @if (ViewBag.AppViewModel.MarketEnabled == "True" && item.OrderDate >= DateTime.UtcNow.AddDays(-4))
                                {
                                    <span>@Html.ActionLink(linkText: "Edit", actionName: "Edit", controllerName: "Order", routeValues: new {id = item.OrderId}, htmlAttributes: new {@class = "btn-xs btn-cp"})</span>
                                    <span>@Html.ActionLink(linkText: "Delete", actionName: "Delete", controllerName: "Order", routeValues: new {id = item.OrderId}, htmlAttributes: new {@class = "btn-xs btn-cp"})</span>
                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
